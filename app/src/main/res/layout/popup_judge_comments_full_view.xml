<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:id="@+id/popup_container"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/black"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/textView_popupJudgeCommentsFullViewLayout_header"
        android:text="Comment:"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorChampionships"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textView_popupJudgeCommentsFullViewLayout_judgeType"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="Line Judge"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text=" - "
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cozmuta Florin"
                android:id="@+id/textView_popupJudgeCommentsFullViewLayout_judgeName"
                android:textColor="@color/white" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/menu_next_event_color"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:id="@+id/imageView_popupJudgeCommentsFullViewLayout_positive"
            android:src="@color/top16Top32Winner"
            android:layout_height="15dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:src="@color/red"
            android:id="@+id/imageView_popupJudgeCommentsFullViewLayout_negative"
            android:layout_height="15dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/imageView_popupJudgeCommentsFullViewLayout_comment"
        android:layout_marginLeft="10dp"
        android:text="wjhgjhgq"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    </LinearLayout>




    <Button
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/black"
        android:id="@+id/button_popupJudgeCommentsFullViewLayout_dismissButton"
        android:text="Dismiss"
        android:layout_height="50dp" />



</LinearLayout>