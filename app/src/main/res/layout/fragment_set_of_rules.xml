<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.iancuio.driftdirect.fragments.SetOfRulesFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/transparent"
        android:paddingBottom="100dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/relativeLayout_setOfRulesLayout_ruleVideoContainer"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imageView_setOfRulesLayout_ruleImage"
                android:adjustViewBounds="true"
                android:layout_height="200dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="invisible"
                android:id="@+id/imageView_setOfRulesLayout_ruleImageBlack"
                android:background="@color/black"
                android:alpha="0.5"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:visibility="invisible"
                android:id="@+id/imageView_setOfRulesLayout_ruleImagePlay"
                android:layout_centerInParent="true"
                android:src="@drawable/play_button"/>

            <ProgressBar
                android:layout_width="80dp"
                android:layout_centerInParent="true"
                android:visibility="visible"
                android:id="@+id/progressBar_setOfRulesLayout_progressBar"
                android:layout_height="80dp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="SET OF RULES"
                android:paddingBottom="10dp"
                android:textColor="@color/colorChampionships"
                android:paddingTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:background="@color/colorChampionships"
                android:layout_height="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView_setOfRulesLayout_ruleDescription"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>






</ScrollView>
