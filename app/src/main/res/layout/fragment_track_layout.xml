<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.iancuio.driftdirect.fragments.TrackLayoutFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imageView_trackLayoutLayout_trackImage"
            android:adjustViewBounds="true" />

        <ProgressBar
            android:layout_width="50dp"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:id="@+id/progressBar_trackLayoutLayout_progressBar"
            android:layout_height="50dp" />


    </RelativeLayout>


        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout_trackLayoutLayout_slidingTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            android:background="@color/white"
            app:tabIndicatorColor="@color/colorChampionships"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorChampionships"
            app:tabTextColor="@color/black" />


        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/viewPager_trackLayoutLayout_trackDetailsViewPager"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"/>



</LinearLayout>
