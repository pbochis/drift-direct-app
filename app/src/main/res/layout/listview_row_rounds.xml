<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/menu_general_color"
    android:id="@+id/relativeLayout_roundsListViewItem_roundBackground"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relativeLayout_roundsListViewItem_pictureContainer"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_roundsListViewItem_roundImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <ProgressBar
            android:layout_width="40dp"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:id="@+id/progressBar_roundsListViewItem_progressBar"
            android:layout_height="40dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/relativeLayout_roundsListViewItem_pictureContainer"
        android:layout_toEndOf="@+id/relativeLayout_roundsListViewItem_pictureContainer"
        android:layout_toRightOf="@+id/relativeLayout_roundsListViewItem_pictureContainer"
        android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:weightSum="10">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/textView_roundsListViewItem_roundNumber"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:maxLines="1"
            android:layout_gravity="top"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="jhg"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/textView_roundsListViewItem_roundStatus"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:text="jhdg"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:weightSum="10">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/textView_roundsListViewItem_roundName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:maxLines="2"
            android:gravity="center_vertical|end"
            android:text="jkghjk"
            android:textAllCaps="true"
            android:textColor="@color/colorChampionships" />

        <TextView
            android:id="@+id/textView_roundsListViewItem_roundDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical|end"
            android:text="21-24 april 2015"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>

    </LinearLayout>


</RelativeLayout>