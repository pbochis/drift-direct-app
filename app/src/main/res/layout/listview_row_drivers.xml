<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/menu_general_color"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relativeLayout_driversListViewItem_pictureContainer"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_driversListViewItem_driversPicture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />

        <ProgressBar
            android:layout_width="40dp"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:id="@+id/progressBar_driversListViewItem_progressBar"
            android:layout_height="40dp" />


    </RelativeLayout>




    <TextView
        android:id="@+id/textView_driversListViewItem_driversName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/relativeLayout_driversListViewItem_pictureContainer"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="jkafh"
        android:textColor="@color/white" />

</RelativeLayout>