<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/menu_next_event_color"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:id="@+id/imageView_gridViewItemNews_newsImage"
            android:layout_height="100dp" />


        <ProgressBar
            android:layout_width="50dp"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:id="@+id/progressBar_gridViewItemNews_progressBar"
            android:layout_height="50dp" />


    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorChampionships"
        android:layout_height="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:id="@+id/textView_gridViewItemNews_newsTitle"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:maxLines="3"
        android:textSize="11sp"
        android:id="@+id/textView_gridViewItemNews_newsDescription"
        android:layout_height="wrap_content" />
</LinearLayout>