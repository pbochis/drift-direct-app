<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.iancuio.driftdirect.fragments.JudgingScoresJudgeScores">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text="Entry Speed:" />

        <EditText
            android:layout_width="30dp"
            android:gravity="center_horizontal"
            android:maxLength="3"
            android:inputType="number"
            android:id="@+id/editText_judgingScoresJudgeScoresLayout_entrySpeed"
            android:background="@color/transparent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:text="km/h" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorChampionships"
        android:gravity="center_vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textView_judgingScoresJudgeScoresLayout_judgeType"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text="Line Judge"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text=" - "
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cozmuta Florin"
            android:id="@+id/textView_judgingScoresJudgeScoresLayout_judgeName"
            android:textColor="@color/white" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:dividerHeight="5dp"
        android:divider="#00000000"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:id="@+id/listView_judgingScoresJudgeScoresLayout_pointsAllocationList"/>





