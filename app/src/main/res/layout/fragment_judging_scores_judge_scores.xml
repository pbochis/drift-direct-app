<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".round.navigationView.qualifications.fragments.scores.JudgingScoresJudgeScores">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">



    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="gone"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:id="@+id/linearLayout_judgingScoresJudgeScoresLayout_entrySpeedContainer"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorChampionships"
            android:layout_marginRight="5dp"
            android:text="Entry Speed:" />

        <EditText
            android:layout_width="30dp"
            android:gravity="center_horizontal"
            android:maxLength="3"
            android:textColor="@color/colorChampionships"
            android:inputType="number"
            android:id="@+id/editText_judgingScoresJudgeScoresLayout_entrySpeed"
            android:background="@color/white"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorChampionships"
            android:layout_height="match_parent"
            android:text="km/h" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorChampionships"
        android:gravity="center_vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textView_judgingScoresJudgeScoresLayout_judgeType"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:text=" - "
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView_judgingScoresJudgeScoresLayout_judgeName"
            android:textColor="@color/white" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:dividerHeight="5dp"
        android:divider="#00000000"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:id="@+id/listView_judgingScoresJudgeScoresLayout_pointsAllocationList"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:padding="5dp">

        <Button
            android:layout_width="100dp"
            android:text="Positive"
            android:id="@+id/button_judgingScoresJudgeScoresLayout_positiveComments"
            android:textStyle="bold"
            android:background="@color/top16Top32Winner"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:text="Comments"
            android:textColor="@color/colorChampionships"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="100dp"
            android:text="Negative"
            android:id="@+id/button_judgingScoresJudgeScoresLayout_negativeComments"
            android:background="@color/red"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="@color/colorChampionships"
        android:text="Submit"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/button_judgingScoresJudgeScoresLayout_submit"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>


